---
import icon from "../../img/logo.png";
import Image from "astro/components/Image.astro";
---

<header class="border-pink h-screen border-l-[10px]">
  <a class="" href="/"
    ><Image class="px-2 pt-10 pb-12" src={icon} alt="Mon logo" /></a
  >
  <ul class="flex flex-col items-center gap-y-6 text-center">
    <li><a href="#"><i class="fa-solid fa-house text-2xl"></i></a></li>
    <li><a href="#"><i class="fa-solid fa-id-card text-2xl"></i></a></li>
    <li><a href="#"><i class="fa-solid fa-code text-2xl"></i></a></li>
    <li>
      <a href="#"><i class="fa-regular fa-paper-plane text-2xl"></i></a>
    </li>
  </ul>
</header>

<style lang="scss">
  ul {
    a {
      display: block;
      width: 100%;
      padding: 12px 0;
      position: relative;
      z-index: 1;

      &:hover {
        color: #000;
        &::before {
          translate: 0;
        }
      }
      &::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        background-color: var(--color-pink);
        width: 100%;
        height: 100%;
        translate: -100%;
        z-index: -1;
        transition: translate 0.1s ease-in-out;
      }
      i {
      }
    }
  }

  li {
    width: 100%;
  }
</style>
