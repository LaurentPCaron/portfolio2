---
import icon from "../../img/logo.png";
import Image from "astro/components/Image.astro";
---

<header
  class:list={[
    "border-pink fixed h-screen w-[4.5rem] overflow-hidden border-l-[10px] bg-black",
    "sm:w-[6rem]",
    "md:w-[14rem]",
    "lg:w-[20rem]",
  ]}
>
  <!-- Logo Section -->
  <a href="/"
    ><Image
      class="w-full max-w-40 px-2 pt-8 pb-12 md:pl-8"
      src={icon}
      alt="Mon logo"
    /></a
  >

  <!-- Navigation Section -->
  <nav>
    <ul
      class:list={[
        "flex flex-col items-center gap-y-6 text-center text-2xl",
        "md:text-left md:text-3xl",
      ]}
    >
      <li>
        <a href="#" class="md:w-fit"
          ><i class:list={["fa-solid fa-house", "md:!hidden"]}></i><span
            class:list={["hidden", "md:block md:pl-8"]}>Acceuil</span
          ></a
        >
      </li>
      <li>
        <a href="#" class="md:w-fit"
          ><i class:list={["fa-solid fa-id-card", "md:!hidden"]}></i><span
            class:list={["hidden", "md:block md:pl-8"]}
          >
            À propos
          </span></a
        >
      </li>
      <li>
        <a href="#" class="md:w-fit"
          ><span class:list={["hidden", "md:block md:pl-8"]}>Projets</span><i
            class:list={["fa-solid fa-code", "md:!hidden"]}></i></a
        >
      </li>
      <li>
        <a href="#" class="md:w-fit"
          ><span class:list={["hidden", "md:block md:pl-8"]}>Me contacter</span
          ><i class:list={["fa-regular fa-paper-plane", "md:!hidden"]}></i></a
        >
      </li>
    </ul>
  </nav>

  <!-- Contact Section -->
  <div class:list={["text-pink pt-20", "md:pl-8"]}>
    <p class="mb-2 hidden text-2xl font-bold md:block">Contacts</p>
    <ul
      class:list={[
        "flex flex-col items-center gap-3 text-xl",
        "md:flex-row md:text-2xl",
      ]}
    >
      <li>
        <a href="http://google.com" target="_blank" rel="noopener noreferrer"
          ><span class="sr-only">Linkedin</span><i
            class="fa-brands fa-linkedin"
            aria-hidden></i></a
        >
      </li>
      <li>
        <a href="https://github.com" target="_blank" rel="noopener noreferrer"
          ><span class="sr-only">Github</span><i
            class="fa-brands fa-github"
            aria-hidden></i></a
        >
      </li>
      <li>
        <a
          href="mailto:info@laurentpcaron.ninja"
          target="_blank"
          rel="noopener noreferrer"
          ><span class="sr-only">M'écrire</span><i
            class="fa-solid fa-envelope"
            aria-hidden></i></a
        >
      </li>
    </ul>
  </div>
</header>

<style lang="scss">
  nav {
    li {
      width: 100%;
    }
    a {
      display: block;
      padding: 12px 0;
      position: relative;
      z-index: 1;

      &:hover {
        color: #000;
        &::before {
          translate: 0;
        }
      }
      &::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        background-color: var(--color-pink);
        width: 100%;
        height: 100%;
        translate: -100%;
        z-index: -1;
        transition: translate 0.1s ease-in-out;
      }
    }
  }
</style>
