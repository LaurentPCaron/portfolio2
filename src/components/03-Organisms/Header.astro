---
import icon from "../../img/logo.png";
import Image from "astro/components/Image.astro";
---

<header class:list={["border-pink h-screen border-l-[10px]"]}>
  <a class="" href="/"
    ><Image class="px-2 pt-10 pb-12" src={icon} alt="Mon logo" /></a
  >
  <ul class="flex flex-col items-center gap-y-6 text-center">
    <li>
      <a href="#"
        ><i class:list={["fa-solid fa-house text-2xl", "md:!hidden"]}></i><span
          class:list={["hidden", "md:inline"]}>Acceuil</span
        ></a
      >
    </li>
    <li>
      <a href="#"
        ><i class:list={["fa-solid fa-id-card text-2xl", "md:!hidden"]}
        ></i><span class:list={["hidden", "md:inline"]}> Ã€ propos </span></a
      >
    </li>
    <li>
      <a href="#"
        ><span class:list={["hidden", "md:inline"]}>Projets</span><i
          class:list={["fa-solid fa-code text-2xl", "md:!hidden"]}></i></a
      >
    </li>
    <li>
      <a href="#"
        ><span class:list={["hidden", "md:inline"]}>Me contacter</span><i
          class:list={["fa-regular fa-paper-plane text-2xl", "md:!hidden"]}
        ></i></a
      >
    </li>
  </ul>
</header>

<style lang="scss">
  ul {
    a {
      display: block;
      width: 100%;
      padding: 12px 0;
      position: relative;
      z-index: 1;

      &:hover {
        color: #000;
        &::before {
          translate: 0;
        }
      }
      &::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        background-color: var(--color-pink);
        width: 100%;
        height: 100%;
        translate: -100%;
        z-index: -1;
        transition: translate 0.1s ease-in-out;
      }
    }
  }

  li {
    width: 100%;
  }
</style>
